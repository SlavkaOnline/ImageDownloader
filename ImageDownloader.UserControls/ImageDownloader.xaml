<UserControl
    x:Class="ImageDownloader.Views.ImageDownloader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImageDownloader.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <StackPanel>
        <Image
            Width="200"
            Height="200"
            Source="{Binding SourceImage}" />
        <TextBox Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            Command="{Binding StartDownloadCommand}"
            Content="Старт" />
        <Button
            Command="{Binding StopDownloadCommand}"
            Content="Стоп" />
    </StackPanel>
</UserControl>
